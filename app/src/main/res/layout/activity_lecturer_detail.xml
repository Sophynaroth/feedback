<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LecturerDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_group"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/logo"
            android:layout_marginBottom="-10dp"
            android:textStyle="bold"
            android:text="Feed Back"
            android:gravity="center"
            android:textColor="#2d3b92"
            android:textSize="40sp" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/keosaly"
                app:civ_border_color="#153992"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/lecturer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keo Saly"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/major"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lecturer_name"
                android:text="Computer Science" />

            <TextView
                android:id="@+id/job_title"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/major"
                android:textSize="10dp"
                android:text="Mobile Dev"
                android:textColor="#2d3b92"
                android:textStyle="bold" />
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#153992"
                android:text="Student Rating : 3.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RatingBar
                style="@style/feedbackRatingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:numStars="5"
                android:rating="3.5" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>