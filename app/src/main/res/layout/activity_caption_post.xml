<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:background="@drawable/border_caption"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/btn_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:background="@drawable/ic_back_arrow"
            />
        <TextView
            android:fontFamily="@font/ubuntu"
            android:id="@+id/create_post"
            android:gravity="center"
            android:layout_toRightOf="@+id/back"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="Create Post"
            android:textColor="#2d3b92"
            android:layout_weight="@android:integer/config_longAnimTime"
            />
        <TextView
            android:gravity="center"
            android:fontFamily="@font/ubuntu"
            android:id="@+id/post"
            android:layout_toRightOf="@+id/create_post"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Post"
            android:textSize="20sp"
            android:textColor="#2d3b92"
            android:background="@null"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/profile"
            app:civ_border_color="#FFFF"
            app:civ_border_width="5dp" />

        <TextView
            android:fontFamily="@font/ubuntu"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/profile"
            android:text="Bunthoeurn Vann"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/btn_pick_image"
            android:background="@drawable/ic_photo_library"
            android:layout_toRightOf="@id/profile"
            android:layout_below="@+id/name"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/item_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:fontFamily="@font/ubuntu"
            android:id="@+id/write_title"
            android:hint="What's on your mind?"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_caption"
            />
        <ImageView
            android:id="@+id/set_image"
            android:layout_below="@+id/write_title"
            android:layout_width="500dp"
            android:layout_height="520dp"
            />
    </RelativeLayout>
</LinearLayout>
</ScrollView>